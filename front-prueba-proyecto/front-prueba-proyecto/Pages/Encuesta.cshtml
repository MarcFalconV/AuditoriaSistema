@page
@model EncuestaModel
@{
    ViewData["Title"] = "Encuesta";
}
<div class="card p-4 shadow-sm" style="max-width: 600px; margin: auto;">
    <form method="post">
        <div class="mb-4">
            <label for="Lugar" class="form-label fw-semibold">Lugar</label>
            <input asp-for="Lugar" class="form-control" id="Lugar" placeholder="Ingrese lugar" />
            <span asp-validation-for="Lugar" class="text-danger"></span>
        </div>

        <div class="row mb-4">
            <div class="col-6">
                <label for="Facultad" class="form-label fw-semibold">Facultad</label>
                <input asp-for="Facultad" class="form-control" id="Facultad" placeholder="Ingrese facultad" />
                <span asp-validation-for="Facultad" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label for="Departamento" class="form-label fw-semibold">Departamento</label>
                <input asp-for="Departamento" class="form-control" id="Departamento" placeholder="Ingrese departamento" />
                <span asp-validation-for="Departamento" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary px-4">Buscar</button>
        </div>
    </form>
</div>

@if (Model.Resultados != null && Model.Resultados.Any())
{
    <div class="container mt-4" style="max-width: 1000px;">
        <h5>Resultados de la búsqueda</h5>
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-primary">
                <tr>
                    <th>ID Auditoría</th>
                    <th>Título Auditoría</th>
                    <th>Ubicación</th>
                    <th>Facultad</th>
                    <th>Departamento</th>
                    <th>Persona Encuestada</th>
                    <th>Estado</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Resultados)
                {
                    <tr>
                        <td>@item.IdAuditoria</td>
                        <td>@item.Titulo</td>
                        <td>@item.Ubicacion</td>
                        <td>@item.Facultad</td>
                        <td>@item.Departamento</td>
                        <td>@item.PersonaEncuestada</td>
                        <td>@item.Estado</td>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm">Detallar</button>
                                <button class="btn btn-outline-success btn-sm">Encuestar</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


